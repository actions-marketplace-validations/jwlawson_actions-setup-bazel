{
  "name": "actions-setup-bazel",
  "version": "0.0.1",
  "description": "GitHub action to setup the bazel build tool",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build src/index.ts -m -o dist",
    "format": "prettier --write **/*.ts __tests__/**/*.js",
    "prepare": "npm run format && npm run package",
    "test": "jest"
  },
  "keywords": [
    "bazel",
    "action",
    "setup"
  ],
  "author": "John Lawson",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/tool-cache": "^1.1.2",
    "semver": "^6.0.0",
    "typed-rest-client": "^1.7.1"
  },
  "devDependencies": {
    "@actions/github": "^2.0.0",
    "@actions/io": "^1.0.1",
    "@types/semver": "^6.2.0",
    "@zeit/ncc": "^0.21.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nock": "^10.0.6",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run prepare && git add dist/"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  }
}
