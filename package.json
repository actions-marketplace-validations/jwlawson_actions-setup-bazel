{
  "name": "actions-setup-bazel",
  "version": "0.0.1",
  "description": "GitHub action to setup the bazel build tool",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write **/*.js *.js",
    "test": "jest"
  },
  "keywords": [
    "bazel",
    "action",
    "setup"
  ],
  "author": "John Lawson",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/tool-cache": "^1.1.2"
  },
  "devDependencies": {
    "@actions/github": "^2.0.0",
    "@actions/io": "^1.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nock": "^11.7.1",
    "prettier": "^1.19.1",
    "request": "^2.88.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-push": "npm prune --production && git add -f node_modules/* && git commit -m \"[Husky] Fix node modules\""
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
